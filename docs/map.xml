<!-- приоритет изменений всегда за мордой. если у мастера в карте другие значения, то он использует те, что найдет в этом файле -->
<exchange>
	<!-- настройки для обмена. их настривать ручками. как часто надо проверять файл морде и мастеру -->
	<update master_check_period="" web_check_period="" />

	<!-- здесь морда задает время, которое тоже идет на мастере и которое мастер раскидывает подчиненным -->
	<time min="" sec=""/>
	
	<!-- а это сама карта. точнее только часть карты, которая интересна морде -->
	<map>
		<!-- адрес регистра, значение в регистре (или что туда надо записать, если последней маняла карту морда), идентификатор кнопки или другого 
		контроллера на веб морде..  собственно мне для работы интересны только адрес (addr) и значение регистра (value), остальные атрибуты в любом количестве
		может (и должен) добавлять разработчик морды. например идентификатор контрола, тип контрола, номер или последовательность бит, на которые 
		влияет контрол на веб морде -->
		<reg addr="" value="" />
		<reg addr="" value="" />
		<reg addr="" value="" />
		<reg addr="" value="" />
	</map>
</exchange>

<!-- мастер использует новые значения из этого файла, только если дата изменения этого файла будет больше, чем дата последней модификации этого файла
 которую знает мастер (больше даты последней проверки мастером) -->
	